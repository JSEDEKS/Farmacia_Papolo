@model IEnumerable<Farmacia_Paolo.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-capsule-pill"></i> Gestión de Productos
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Producto
        </a>
    </div>

    <!-- Barra de búsqueda -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-2 align-items-center">
                <div class="col-md-10 col-sm-9">
                    <input type="text" name="searchString" class="form-control" placeholder="🔎 Buscar producto por nombre, código o categoría..." />
                </div>
                <div class="col-md-2 col-sm-3 text-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de productos -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-primary text-dark">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Categoría</th>
                                <th>Precio (RD$)</th>
                                <th>Stock Mínimo</th>
                                <th>Proveedor</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td>@producto.Codigo</td>
                                    <td>@producto.Nombre</td>
                                    <td>@producto.Categoria</td>
                                    <td>@producto.Precio.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                                    <td>@producto.StockMinimo</td>
                                    <td>@producto.Proveedor?.NombreProveedor</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@producto.ProductoID" class="btn btn-warning btn-sm text-white">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@producto.ProductoID" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                            <a asp-controller="Lotes" asp-action="Index" asp-route-productoId="@producto.ProductoID" class="btn btn-sm btn-success">Ver Lotes</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center m-0" role="alert">
                    No hay productos registrados actualmente.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f2f8ff;
        transition: 0.2s;
    }

    th {
        font-weight: 600;
    }

    .card {
        border-radius: 15px;
    }

    .btn {
        border-radius: 10px;
        font-weight: 500;
    }

    input.form-control {
        border-radius: 10px;
    }

    form button.btn {
        border-radius: 10px;
    }
</style>
