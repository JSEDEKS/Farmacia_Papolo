@model Farmacia_Paolo.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>Detalles del Producto</h1>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fabricante</dt>
        <dd class="col-sm-10">@Model.Fabricante</dd>

        <dt class="col-sm-2">Fecha de Vencimiento</dt>
        <dd class="col-sm-10">@Model.FechaVencimiento.ToShortDateString()</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Categoria</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Editar</a>
    <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
</p>
