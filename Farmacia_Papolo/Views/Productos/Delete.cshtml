@model Farmacia_Paolo.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1>Eliminar Producto</h1>

<h4>¿Está seguro que desea eliminar este producto?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Fabricante</dt>
    <dd class="col-sm-10">@Model.Fabricante</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑️ Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">↩️ Cancelar</a>
</form>
