@model Farmacia_Paolo.Models.AjusteStockViewModel

@{
    ViewData["Title"] = "Ajustar Stock";
}

<h1>@ViewData["Title"]</h1>

<h4>Producto: @Model.ProductoNombre</h4>
<h5>Lote: @Model.LoteNumero (Stock Actual: @Model.CantidadActual)</h5>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AjustarStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LoteID" />
            <input type="hidden" asp-for="ProductoNombre" />
            <input type="hidden" asp-for="LoteNumero" />
            <input type="hidden" asp-for="CantidadActual" />

            <div class="form-group mb-3">
                <label asp-for="TipoMovimiento" class="control-label"></label>
                <select asp-for="TipoMovimiento" class="form-select">
                    <option value="Merma">Merma (Pérdida/Vencimiento)</option>
                    <option value="Ajuste Negativo">Ajuste Negativo (Conteo)</option>
                    <option value="Ajuste Positivo">Ajuste Positivo (Conteo)</option>
                </select>
                <span asp-validation-for="TipoMovimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CantidadAjuste" class="control-label"></label>
                <input asp-for="CantidadAjuste" class="form-control" type="number" min="1" />
                <span asp-validation-for="CantidadAjuste" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Motivo" class="control-label"></label>
                <textarea asp-for="Motivo" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Ajuste" class="btn btn-primary" />
                <a asp-controller="Productos" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}