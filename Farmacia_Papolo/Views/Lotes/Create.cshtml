@model Farmacia_Paolo.Models.Lote
@using Farmacia_Paolo.Models

@{
    var prod = ViewData["Producto"] as Producto ?? new Producto { Nombre = "", ProductoID = Model?.ProductoID ?? 0 };
    ViewData["Title"] = $"Registrar Nuevo Lote para: {prod.Nombre}";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Bloque de diagnóstico: muestra TODOS los errores del ModelState -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        <strong>Errores de validación:</strong>
        <ul class="mb-0">
            @foreach (var kv in ViewData.ModelState)
            {
                foreach (var err in kv.Value.Errors)
                {
                    <li><code>@kv.Key</code>: @err.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="col-12">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <!-- IMPORTANTE: enviar el ProductoID -->
            <input type="hidden" asp-for="ProductoID" value="@Model.ProductoID" />

            <div class="mb-3">
                <label asp-for="NumeroLote" class="form-label"></label>
                <input asp-for="NumeroLote" class="form-control" />
                <span asp-validation-for="NumeroLote" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CantidadActual" class="form-label"></label>
                <input asp-for="CantidadActual" type="number" min="0" class="form-control" value="@(Model.CantidadActual)" />
                <span asp-validation-for="CantidadActual" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FechaVencimiento" class="form-label"></label>
                    <input asp-for="FechaVencimiento" type="date" class="form-control"
                           value="@(Model.FechaVencimiento == default ? "" : Model.FechaVencimiento.ToString("yyyy-MM-dd"))" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaEntrada" class="form-label"></label>
                    <input asp-for="FechaEntrada" type="date" class="form-control"
                           value="@(Model.FechaEntrada == default ? DateTime.Today.ToString("yyyy-MM-dd") : Model.FechaEntrada.ToString("yyyy-MM-dd"))" />
                    <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Guardar Lote</button>
                <a asp-action="Index" asp-route-productoId="@Model.ProductoID"
                   class="btn btn-outline-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
