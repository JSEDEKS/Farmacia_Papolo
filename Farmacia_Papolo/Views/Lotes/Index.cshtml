
@model IEnumerable<Farmacia_Paolo.Models.Lote>
@using Farmacia_Paolo.Models

@{
    var prod = (Producto)ViewData["Producto"];   // viene del controller
    ViewData["Title"] = $"Inventario / Lotes del Producto: {prod.Nombre}";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
}

<p class="mb-3">
    <a class="btn btn-primary"
       asp-action="Create"
       asp-route-productoId="@prod.ProductoID">
        Registrar Nuevo Lote
    </a>
    <a class="btn btn-outline-secondary ms-2" asp-controller="Productos" asp-action="Index">
        Volver a Productos
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Número de Lote</th>
            <th>Cantidad Actual</th>
            <th>Fecha Vencimiento</th>
            <th>Fecha Entrada</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            <tr>
                <td class="fw-semibold">@l.NumeroLote</td>
                <td>@l.CantidadActual</td>
                <td>@l.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                <td>@l.FechaEntrada.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@l.LoteID">Editar</a>
                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="AjustarStock" asp-route-id="@l.LoteID">Ajustar Stock</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@l.LoteID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


